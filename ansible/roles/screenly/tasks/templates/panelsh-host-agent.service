[Unit]
Description=Panelsh Host Agent
After=docker.service
StartLimitIntervalSec=10
StartLimitBurst=3

[Service]
WorkingDirectory=/home/{{ lookup('env', 'USER') }}/panelsh
User={{ lookup('env', 'USER') }}

ExecStart=/home/{{ lookup('env', 'USER') }}/installer_venv/bin/python /home/{{ lookup('env', 'USER') }}/panelsh/host_agent.py
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
