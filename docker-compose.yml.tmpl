# vim: ft=yaml.docker-compose

services:
  panelsh-wifi-connect:
    image: panelsh/panelsh-wifi-connect:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.wifi-connect
    depends_on:
      - panelsh-viewer
    environment:
      PORTAL_LISTENING_PORT: 8000
      CHECK_CONN_FREQ: 10
      PORTAL_SSID: 'Panelsh WiFi Connect'
      DBUS_SYSTEM_BUS_ADDRESS: 'unix:path=/run/dbus/system_bus_socket'
    network_mode: host
    privileged: true
    volumes:
      - type: bind
        source: /run/dbus/system_bus_socket
        target: /run/dbus/system_bus_socket

  panelsh-server:
    image: panelsh/panelsh-server:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.server
    environment:
      - MY_IP=${MY_IP}
      - MAC_ADDRESS=${MAC_ADDRESS}
      - HOST_USER=${USER}
      - HOME=/data
      - LISTEN=0.0.0.0
      - CELERY_BROKER_URL=redis://redis:6379/0
      - CELERY_RESULT_BACKEND=redis://redis:6379/0
    devices:
      - "/dev/vchiq:/dev/vchiq"
    restart: always
    volumes:
      - resin-data:/data
      - /home/${USER}/.panelsh:/data/.panelsh
      - /home/${USER}/panelsh_assets:/data/panelsh_assets
      - /home/${USER}/panelsh/staticfiles:/data/panelsh/staticfiles
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
    labels:
      io.balena.features.supervisor-api: '1'

  panelsh-viewer:
    image: panelsh/panelsh-viewer:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.viewer
    mem_limit: ${VIEWER_MEMORY_LIMIT_KB}k
    depends_on:
      - panelsh-server
    environment:
      - HOME=/data
      - PORT=80
      - NOREFRESH=1
      - LISTEN=panelsh-nginx
    extra_hosts:
      - "host.docker.internal:host-gateway"
    privileged: true
    restart: always
    shm_size: ${SHM_SIZE_KB}kb
    volumes:
      - resin-data:/data
      - /home/${USER}/.asoundrc:/data/.asoundrc
      - /home/${USER}/.panelsh:/data/.panelsh
      - /home/${USER}/panelsh_assets:/data/panelsh_assets
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
    labels:
      io.balena.features.supervisor-api: '1'

  panelsh-websocket:
    image: panelsh/panelsh-websocket:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.websocket
    depends_on:
      - panelsh-server
    environment:
      - HOME=/data
      - LISTEN=0.0.0.0
    restart: always
    volumes:
      - resin-data:/data
      - /home/${USER}/.panelsh:/data/.panelsh
      - /home/${USER}/panelsh_assets:/data/panelsh_assets
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro

  panelsh-celery:
    image: panelsh/panelsh-celery:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.celery
    depends_on:
      - panelsh-server
      - redis
    environment:
      - HOME=/data
      - CELERY_BROKER_URL=redis://redis:6379/0
      - CELERY_RESULT_BACKEND=redis://redis:6379/0
    devices:
      - "/dev/vchiq:/dev/vchiq"
    restart: always
    volumes:
      - resin-data:/data
      - /home/${USER}/.panelsh:/data/.panelsh
      - /home/${USER}/panelsh_assets:/data/panelsh_assets
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
    labels:
      io.balena.features.supervisor-api: '1'

  redis:
    image: panelsh/panelsh-redis:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.redis
    ports:
      - 127.0.0.1:6379:6379
    restart: always
    volumes:
      - redis-data:/var/lib/redis

  panelsh-nginx:
    image: panelsh/panelsh-nginx:${DOCKER_TAG}-${DEVICE_TYPE}
    build:
      context: .
      dockerfile: docker/Dockerfile.nginx
    ports:
      - 80:80
    environment:
      - HOME=/data
    depends_on:
      - panelsh-server
      - panelsh-websocket
    restart: always
    volumes:
      - resin-data:/data:ro
      - /home/${USER}/.panelsh:/data/.panelsh:ro
      - /home/${USER}/panelsh_assets:/data/panelsh_assets:ro
      - /home/${USER}/panelsh/staticfiles:/data/panelsh/staticfiles:ro
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro

volumes:
  resin-data:
  redis-data:
  panelsh-data:
